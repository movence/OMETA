<Configuration status="INFO">
    <Appenders>
        <File name="File" fileName="${user.home}/.ometa/ometa.log" immediateFlush="false" append="false">
            <PatternLayout pattern="%d %-5p [%c] %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="rollingFile" />
        </Root>
    </Loggers>
</Configuration>